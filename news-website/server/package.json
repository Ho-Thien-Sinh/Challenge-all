{
  "name": "news-website-backend",
  "version": "1.0.0",
  "description": "Backend cho ứng dụng tin tức sử dụng Node.js, Express và PostgreSQL",
  "_moduleAliases": {
    "@": "./dist",
    "@/config": "./dist/config",
    "@/controllers": "./dist/controllers",
    "@/middleware": "./dist/middleware",
    "@/middlewares": "./dist/middlewares",
    "@/models": "./dist/models",
    "@/routes": "./dist/routes",
    "@/services": "./dist/services",
    "@/utils": "./dist/utils",
    "@/types": "./dist/types",
    "@/interfaces": "./dist/interfaces"
  },
  "main": "bootstrap.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node bootstrap.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "setup": "node start.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --detectOpenHandles --forceExit",
    "test:scraper": "ts-node -r tsconfig-paths/register scripts/test-scraper.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "sequelize",
    "rest-api",
    "jwt",
    "authentication"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0",
    "colors": "^1.4.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.9",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pug": "^3.0.3",
    "sequelize": "^6.37.1",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@cspotcode/source-map-support": "^0.8.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.29",
    "@types/node-schedule": "^2.1.7",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
