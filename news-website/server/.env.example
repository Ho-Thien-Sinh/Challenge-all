# ========================
# Ứng dụng
# ========================
NODE_ENV=development
PORT=5000

# ========================
# Cơ sở dữ liệu
# ========================
# Cấu hình cơ sở dữ liệu phát triển
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=news_website_dev
DB_HOST=localhost
DB_PORT=5432

# Cấu hình cơ sở dữ liệu test (tùy chọn)
TEST_DB_USER=postgres
TEST_DB_PASSWORD=your_test_password
TEST_DB_NAME=news_website_test
TEST_DB_HOST=localhost
TEST_DB_PORT=5433

# URL kết nối production (sẽ ghi đè các cấu hình khác nếu được đặt)
# DATABASE_URL=postgresql://user:password@host:port/database_name?sslmode=require

# ========================
# Xác thực & Bảo mật
# ========================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# ========================
# Email
# ========================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password  # Sử dụng mật khẩu ứng dụng nếu dùng Gmail
EMAIL_FROM='News Website <noreply@yourdomain.com>'

# ========================
# Tùy chọn khác
# ========================
# URL gốc của frontend (dùng cho CORS, email links, etc.)
FRONTEND_URL=http://localhost:3000

# Giới hạn tốc độ API (số request mỗi phút)
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 phút
RATE_LIMIT_MAX=100  # 100 requests mỗi cửa sổ

# Kích hoạt logging chi tiết (true/false)
ENABLE_QUERY_LOGGING=true
ENABLE_REQUEST_LOGGING=true

# Kích thước tải lên tối đa (MB)
MAX_FILE_UPLOAD=10
FILE_UPLOAD_PATH=./public/uploads

# App URL
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:5000
