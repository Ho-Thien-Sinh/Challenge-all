# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT
JWT_SECRET=your_jwt_secret
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Database
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_PORT=5432

# Email Configuration (Development - Mailtrap)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_FROM='Your App Name <noreply@yourapp.com>'
EMAIL_FROM_NAME='Your App Name'

# Email Configuration (Production - SendGrid)
SENDGRID_USERNAME=apikey
SENDGRID_PASSWORD=your_sendgrid_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes
RATE_LIMIT_MAX=100 # Limit each IP to 100 requests per windowMs

# Logging
LOG_LEVEL=info

# Session Secret (for express-session)
SESSION_SECRET=your_session_secret

# Password Reset Token Expiration (in minutes)
PASSWORD_RESET_EXPIRE=10

# Email Verification Token Expiration (in hours)
EMAIL_VERIFICATION_EXPIRE=24
